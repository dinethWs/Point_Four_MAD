<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Item2">

    <Button
        android:id="@+id/btn_IPurchase2"
        android:layout_width="190dp"
        android:layout_height="72dp"
        android:backgroundTint="@color/btn_IPurchse2"
        android:text="@string/btn_IPurchase2"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_Icart2"
        app:layout_constraintEnd_toStartOf="@+id/btn_Icart2"
        app:layout_constraintHorizontal_bias="0.592"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_Icart2"
        android:layout_width="190dp"
        android:layout_height="72dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="44dp"
        android:backgroundTint="#FF5733"
        android:onClick="sendItem2"
        android:text="Add To cart"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="221dp"
        android:layout_height="234dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.226"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/product1" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="98dp"
        android:layout_height="70dp"
        android:layout_marginTop="68dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.435"
        app:layout_constraintStart_toEndOf="@+id/imageView10"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fcream1" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="84dp"
        android:layout_height="73dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.527"
        app:layout_constraintStart_toEndOf="@+id/imageView10"
        app:layout_constraintTop_toBottomOf="@+id/imageView11"
        app:srcCompat="@drawable/fcream2" />

    <TextView
        android:id="@+id/tv_ItemName2"
        android:layout_width="357dp"
        android:layout_height="67dp"
        android:layout_marginTop="12dp"
        android:text="Hydro Boost Hyaluronic Acid Hydrating Water Face Gel Moisturizer"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.796"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView10" />

    <TextView
        android:id="@+id/tv_Itemprice2"
        android:layout_width="206dp"
        android:layout_height="57dp"
        android:layout_marginTop="132dp"
        android:text="Rs.1,300.00"
        android:textColor="#FF5733"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_IPurchase2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.078"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_ItemName2"
        app:layout_constraintVertical_bias="0.235" />

    <TextView
        android:id="@+id/tv_brand2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="Brand"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="333dp"
        android:layout_height="31dp"
        android:onClick="sendItem2"
        android:text="COBazar More Makeup from COBaza"
        android:textColor="#3D65EA"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_Icart2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tv_brand2"
        app:layout_constraintTop_toBottomOf="@+id/tv_ItemName2"
        app:layout_constraintVertical_bias="0.251" />
</androidx.constraintlayout.widget.ConstraintLayout>
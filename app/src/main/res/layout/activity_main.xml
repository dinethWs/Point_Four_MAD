<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_product1"
        android:layout_width="108dp"
        android:layout_height="40dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="53dp"
        android:text="@string/tv_product1"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/tv_pro" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="167dp"
        android:layout_height="104dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_pro"
        app:srcCompat="@drawable/makeup1" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="134dp"
        android:layout_height="112dp"
        android:layout_marginTop="256dp"
        android:layout_marginEnd="216dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/product1" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="179dp"
        android:layout_height="127dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView4"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/cream" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="197dp"
        android:layout_height="108dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:srcCompat="@drawable/lipstick" />

    <TextView
        android:id="@+id/tv_product4"
        android:layout_width="101dp"
        android:layout_height="34dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="68dp"
        android:text="@string/tv_product4"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_foot" />

    <TextView
        android:id="@+id/tv_product2"
        android:layout_width="131dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="18dp"
        android:text="@string/tv_product2"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_facial"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.777" />

    <TextView
        android:id="@+id/tv_product3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="236dp"
        android:layout_marginBottom="4dp"
        android:text="@string/tv_product3"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_foot"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_extra"
        android:layout_width="114dp"
        android:layout_height="50dp"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="42dp"
        android:text="@string/btn_extra"
        app:layout_constraintBottom_toTopOf="@+id/tv_product2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/tv_product1"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_facial"
        android:layout_width="114dp"
        android:layout_height="50dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="52dp"
        android:text="Select"
        app:layout_constraintBottom_toTopOf="@+id/tv_product3"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_foot"
        android:layout_width="114dp"
        android:layout_height="50dp"
        android:layout_marginBottom="88dp"
        android:text="Select"
        app:layout_constraintBottom_toTopOf="@+id/btn_lipstick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_lipstick"
        android:layout_width="114dp"
        android:layout_height="50dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="92dp"
        android:text="Select"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_pro"
        android:layout_width="132dp"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        android:text="Products"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imgBtn_set"
        android:layout_width="53dp"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:background="#40526F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.958"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/ic_menu_preferences" />

</androidx.constraintlayout.widget.ConstraintLayout>
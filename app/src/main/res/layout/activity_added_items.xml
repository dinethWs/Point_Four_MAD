<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addedItems">

    <Button
        android:id="@+id/btn_itemAdd"
        android:layout_width="226dp"
        android:layout_height="57dp"
        android:layout_marginTop="40dp"
        android:background="@color/btn_addItem"
        android:backgroundTint="@color/btn_addItem"
        android:text="Add Item"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/addview1"
        android:layout_width="374dp"
        android:layout_height="111dp"
        android:layout_marginTop="32dp"
        android:background="@color/box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_itemAdd" />

    <View
        android:id="@+id/view3"
        android:layout_width="374dp"
        android:layout_height="111dp"
        android:layout_marginTop="336dp"
        android:background="@color/box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.432"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_itemAdd" />

    <View
        android:id="@+id/view4"
        android:layout_width="374dp"
        android:layout_height="111dp"
        android:layout_marginTop="480dp"
        android:background="@color/box"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_itemAdd"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/addview2"
        android:layout_width="369dp"
        android:layout_height="118dp"
        android:background="@color/box"
        app:layout_constraintBottom_toTopOf="@+id/view3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addview1" />
</androidx.constraintlayout.widget.ConstraintLayout>
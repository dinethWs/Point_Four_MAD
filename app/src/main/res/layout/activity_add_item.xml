<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addItem">

    <View
        android:id="@+id/addphotoView"
        android:layout_width="244dp"
        android:layout_height="159dp"
        android:layout_marginTop="48dp"
        android:background="@color/box"
        android:backgroundTint="@color/box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_addItemName"
        android:layout_width="144dp"
        android:layout_height="44dp"
        android:text="@string/tv_addItemName"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/et_addItemName"
        app:layout_constraintEnd_toStartOf="@+id/et_addItemName"
        app:layout_constraintHorizontal_bias="0.309"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_addItemprice"
        android:layout_width="144dp"
        android:layout_height="44dp"
        android:text="@string/tv_addItemprice"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/et_addItemprice"
        app:layout_constraintEnd_toStartOf="@+id/et_addItemName"
        app:layout_constraintHorizontal_bias="0.29"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_addItemDes"
        android:layout_width="144dp"
        android:layout_height="44dp"
        android:text="@string/tv_addItemDes"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/et_addItemDescription"
        app:layout_constraintEnd_toStartOf="@+id/et_addItemName"
        app:layout_constraintHorizontal_bias="0.309"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_addItemName"
        android:layout_width="208dp"
        android:layout_height="49dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="4dp"
        android:ems="10"
        android:hint="@string/et_addItemName"
        android:inputType="textPersonName"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/et_addItemprice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addphotoView"
        app:layout_constraintVertical_bias="0.04000002" />

    <EditText
        android:id="@+id/et_addItemprice"
        android:layout_width="204dp"
        android:layout_height="50dp"
        android:layout_marginTop="204dp"
        android:layout_marginEnd="4dp"
        android:ems="10"
        android:hint="@string/et_addItemprice"
        android:inputType="textPersonName"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addphotoView" />

    <EditText
        android:id="@+id/et_addItemDescription"
        android:layout_width="207dp"
        android:layout_height="52dp"
        android:layout_marginTop="296dp"
        android:layout_marginEnd="4dp"
        android:ems="10"
        android:hint="Enter Description"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addphotoView" />

    <Button
        android:id="@+id/btn_addProduct"
        android:layout_width="161dp"
        android:layout_height="65dp"
        android:text="Save"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.104"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_addItemDescription"
        app:layout_constraintVertical_bias="0.504" />

    <Button
        android:id="@+id/btn_viewItems"
        android:layout_width="161dp"
        android:layout_height="65dp"
        android:text="View Items"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.844"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_addItemDescription"
        app:layout_constraintVertical_bias="0.504" />

    <ImageView
        android:id="@+id/itemPic"
        android:layout_width="233dp"
        android:layout_height="147dp"
        android:layout_marginTop="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>